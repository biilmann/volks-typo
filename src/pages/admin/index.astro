---
const { searchParams } = new URL(Astro.request.url);
const error = searchParams.get('error');
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
  <style>
    body { display: flex; align-items: center; justify-content: center; height: 100vh; margin: 0; background: #f5f5f5; }
    .card { background: #fff; padding: 2rem; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); text-align: center; width: 100%; max-width: 400px; }
    .error { color: red; margin-bottom: 1rem; }
    .btn { display: inline-block; margin: 0.5rem; padding: 0.5rem 1rem; background: #0070f3; color: #fff; border: none; border-radius: 4px; text-decoration: none; cursor: pointer; transition: background 0.2s; }
    .btn:hover { background: #005bb5; }
    .btn-secondary { background: transparent; color: #0070f3; border: 1px solid #0070f3; }
    .btn-secondary:hover { background: #e6f0ff; }
  </style>
</head>
<body>
  <div class="card">
    {error && <div class="error">{error}</div>}
    <h1>Dashboard</h1>
    <a href="/admin/publish" class="btn">Start Publishing</a>
    <a href="/api/auth-logout" class="btn btn-secondary">Logout</a>
  </div>
  <script>
    async function checkAuth() {
      try {
        const res = await fetch('/api/notion?s=test');
        if (res.status === 401) {
          window.location.href = '/admin/login';
        }
      } catch {
        window.location.href = '/admin/login';
      }
    }
    document.addEventListener('DOMContentLoaded', checkAuth);
  </script>
</body>
</html>