---
const url = new URL(Astro.request.url);
const error = url.searchParams.get('error');
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/styles/global.css" />
    <style>
      .container {
        max-width: 800px;
        margin: 0 auto;
        padding: calc(var(--grid-unit) * 4);
      }
      .error {
        color: var(--color-accent);
        margin-bottom: calc(var(--grid-unit) * 2);
      }
      .nav {
        display: flex;
        gap: calc(var(--grid-unit) * 2);
        margin-top: calc(var(--grid-unit) * 4);
      }
      .btn {
        padding: calc(var(--grid-unit) * 1) calc(var(--grid-unit) * 2);
        background: var(--color-accent);
        color: var(--color-white);
        text-decoration: none;
        border-radius: 4px;
        font-weight: bold;
        transition: opacity 0.2s ease;
      }
      .btn.secondary {
        background: var(--color-text-muted);
      }
      .btn:hover {
        opacity: 0.85;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>Admin Dashboard</h1>
      {error && <div class="error">Error: {error}</div>}
      <div class="nav">
        <a class="btn" href="/admin/publish">Start Publishing</a>
        <a class="btn secondary" href="/.netlify/functions/auth-logout">Logout</a>
      </div>
    </div>
    <script type="module" client:load>
      (async () => {
        try {
          const res = await fetch('/.netlify/functions/notion?s=test');
          if (res.status === 401) {
            window.location.href = '/admin/login';
          }
        } catch {
          window.location.href = '/admin/login';
        }
      })();
    </script>
  </body>
</html>