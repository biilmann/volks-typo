<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Dashboard</title>
</head>
<body class="text-center">
  <div class="admin-container">
    <div class="admin-card">
      <h1>Dashboard</h1>
      <div id="error" class="alert error" style="display:none;"></div>
      <nav>
        <a href="/admin/publish" class="button">Start Publishing</a>
        <a href="/.netlify/functions/auth-logout" class="button secondary">Logout</a>
      </nav>
    </div>
  </div>
  <script>
    (async () => {
      const params = new URLSearchParams(window.location.search);
      const error = params.get('error');
      if (error) {
        const el = document.getElementById('error');
        el.textContent = error.replace('_', ' ');
        el.style.display = 'block';
      }
      try {
        const res = await fetch(`/.netlify/functions/notion?s=test`, { credentials: 'include' });
        if (res.status === 401) {
          window.location.href = '/admin/login';
        }
      } catch (e) {
        console.error(e);
        window.location.href = '/admin/login';
      }
    })();
  </script>
</body>
</html>
