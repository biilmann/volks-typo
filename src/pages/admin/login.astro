---
const { searchParams } = new URL(Astro.request.url);
const error = searchParams.get('error');
---
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Admin Login</title>
  <style>
    body { display: flex; align-items: center; justify-content: center; height: 100vh; margin: 0; background: #f5f5f5; }
    .card { background: #fff; padding: 2rem; border-radius: 8px; box-shadow: 0 2px 8px rgba(0,0,0,0.1); text-align: center; width: 100%; max-width: 400px; }
    .error { color: red; margin-bottom: 1rem; }
    .btn { display: inline-block; padding: 0.5rem 1rem; background: #0070f3; color: #fff; border: none; border-radius: 4px; text-decoration: none; cursor: pointer; transition: background 0.2s; }
    .btn:hover { background: #005bb5; }
  </style>
</head>
<body>
  <div class="card">
    {error && <div class="error">{error}</div>}
    <a href="/api/auth-login" class="btn">Login with GitHub</a>
  </div>
</body>
</html>